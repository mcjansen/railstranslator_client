<!DOCTYPE html>
<html>
<head>
  <title>Sync Translations</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #f3f4f6;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
      padding: 32px;
      max-width: 480px;
      width: 100%;
    }
    h1 {
      font-size: 24px;
      margin-bottom: 8px;
      color: #111827;
    }
    .subtitle {
      color: #6b7280;
      margin-bottom: 24px;
    }
    .config-info {
      background: #f9fafb;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 24px;
      font-size: 14px;
    }
    .config-info dt {
      color: #6b7280;
      font-size: 12px;
      text-transform: uppercase;
      margin-top: 8px;
    }
    .config-info dt:first-child { margin-top: 0; }
    .config-info dd {
      color: #111827;
      font-family: monospace;
      word-break: break-all;
    }
    .btn {
      display: inline-block;
      padding: 12px 24px;
      border-radius: 8px;
      font-weight: 500;
      text-decoration: none;
      cursor: pointer;
      border: none;
      font-size: 16px;
      transition: all 0.2s;
    }
    .btn-primary {
      background: #2563eb;
      color: white;
    }
    .btn-primary:hover { background: #1d4ed8; }
    .btn-primary:disabled {
      background: #93c5fd;
      cursor: not-allowed;
    }
    .btn-secondary {
      background: #e5e7eb;
      color: #374151;
      margin-left: 8px;
    }
    .btn-secondary:hover { background: #d1d5db; }
    .status {
      margin-top: 24px;
      padding: 16px;
      border-radius: 8px;
      display: none;
    }
    .status.syncing {
      display: block;
      background: #eff6ff;
      border: 1px solid #bfdbfe;
      color: #1e40af;
    }
    .status.success {
      display: block;
      background: #f0fdf4;
      border: 1px solid #bbf7d0;
      color: #166534;
    }
    .status.error {
      display: block;
      background: #fef2f2;
      border: 1px solid #fecaca;
      color: #991b1b;
    }
    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid currentColor;
      border-right-color: transparent;
      border-radius: 50%;
      animation: spin 0.75s linear infinite;
      margin-right: 8px;
      vertical-align: middle;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .synced-list {
      margin-top: 8px;
      padding-left: 20px;
    }
    .close-hint {
      margin-top: 16px;
      font-size: 14px;
      color: #6b7280;
    }
  </style>
</head>
<body>
  <div class="card">
    <h1>Sync Translations</h1>
    <p class="subtitle">Pull latest translations from RailsTranslator</p>

    <dl class="config-info">
      <dt>Server</dt>
      <dd><%= @config.api_url || "(not configured)" %></dd>
      <dt>Application</dt>
      <dd><%= @config.app_slug || "(not configured)" %></dd>
      <dt>Locales</dt>
      <dd><%= @locale || @config.locales&.join(", ") || "all" %></dd>
    </dl>

    <% if @config.valid? %>
      <button id="syncBtn" class="btn btn-primary" onclick="startSync()">
        Sync Now
      </button>
      <% if @return_url.present? %>
        <a href="<%= @return_url %>" class="btn btn-secondary">Back to RailsTranslator</a>
      <% end %>
    <% else %>
      <div class="status error" style="display: block;">
        Configuration incomplete. Please set RAILSTRANSLATOR_URL, RAILSTRANSLATOR_API_KEY, and RAILSTRANSLATOR_APP_SLUG.
      </div>
    <% end %>

    <div id="status" class="status"></div>

    <% if @return_url.present? %>
      <p class="close-hint">You can close this tab after sync completes.</p>
    <% end %>
  </div>

  <script>
    const autoSync = <%= @auto_sync.to_json %>;
    const locale = <%= @locale.to_json %>;

    async function startSync() {
      const btn = document.getElementById('syncBtn');
      const status = document.getElementById('status');

      btn.disabled = true;
      status.className = 'status syncing';
      status.innerHTML = '<span class="spinner"></span> Syncing translations...';

      try {
        const params = new URLSearchParams();
        if (locale) params.append('locale', locale);

        const response = await fetch('<%= railstranslator_client.sync_path %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'Accept': 'application/json',
            'X-CSRF-Token': '<%= form_authenticity_token %>'
          },
          body: params
        });

        const data = await response.json();

        if (data.success) {
          status.className = 'status success';
          let html = '<strong>Sync completed!</strong>';
          if (data.synced && data.synced.length > 0) {
            html += '<ul class="synced-list">';
            data.synced.forEach(loc => {
              html += `<li>${loc}.yml updated</li>`;
            });
            html += '</ul>';
          }
          status.innerHTML = html;
        } else {
          status.className = 'status error';
          status.innerHTML = '<strong>Sync failed:</strong> ' + (data.error || data.errors?.join(', ') || 'Unknown error');
        }
      } catch (err) {
        status.className = 'status error';
        status.innerHTML = '<strong>Error:</strong> ' + err.message;
      }

      btn.disabled = false;
    }

    // Auto-sync if requested
    if (autoSync) {
      startSync();
    }
  </script>
</body>
</html>
